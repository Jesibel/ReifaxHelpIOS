<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
 xmlns:gap   = "http://phonegap.com/ns/1.0"
 id          = "com.reifax.help"
 versionCode = "1" 
 version     = "1.0.0" >

  <!-- versionCode is optional and Android only -->

  <name>Reifax Help</name>

  <description>
  Reifax Help for IOS. 
  </description> 

  <author href="http://reifaxhelper.booleam.com" email="jesibelaranguren@gmail.com">
  Jesibel Aranguren 
  </author>
  
 
	<gap:platform name="ios" />
	<gap:platform name="android" />
  
   <feature name="http://api.phonegap.com/1.0/network"/>
   <feature name="http://api.phonegap.com/1.0/media"/>
   <feature name="http://api.phonegap.com/1.0/file"/>
   <feature name="http://api.phonegap.com/1.0/notification"/>
 
  <content src="index.html" />

  <!-- Preferences -->

  <preference name="orientation" value="default" />
  <preference name="show-splash-screen-spinner" value="false" />
  <preference name="android-minSdkVersion" value="14" />       <!-- JB 4.0 -->

  

  <preference name="SplashScreen" value="splash" />
  <preference name="SplashScreenDelay" value="10000" /> <!-- ios: if set to false, the spinner won't appear on the splash screen during app loading -->
  
	
  <preference name="DisallowOverscroll" value="true"/>
  
  <preference name="stay-in-webview" value="true" /> 
 
  <preference name="ShowSplashScreenSpinner" value="false" />
  <preference name="AutoHideSplashScreen" value="false" />
  <!-- Define app icon for each platform. -->
  <icon src="resources/image/ReiFax_Help_logo-120.png"/>
  
  <icon src="resources/image/logo-36.png"   gap:platform="android"    gap:density="ldpi" />
  <icon src="resources/image/logo-48.png"   gap:platform="android"    gap:density="mdpi" />
  <icon src="resources/image/logo-72.png"   gap:platform="android"    gap:density="hdpi" />
  <icon src="resources/image/logo-96.png"   gap:platform="android"    gap:density="xhdpi" />
  
  <icon src="resources/image/ReiFax_Help_logo-29.png"   gap:platform="ios"        width="29" height="29" />
  <icon src="resources/image/ReiFax_Help_logo-40.png"   gap:platform="ios"        width="40" height="40" />
  <icon src="resources/image/ReiFax_Help_logo-50.png"   gap:platform="ios"        width="50" height="50" />
  <icon src="resources/image/ReiFax_Help_logo-57.png"   gap:platform="ios"        width="57" height="57" />
  <icon src="resources/image/ReiFax_Help_logo-58.png"   gap:platform="ios"        width="58" height="58" />
  <icon src="resources/image/ReiFax_Help_logo-60.png"   gap:platform="ios"        width="60" height="60" />
  <icon src="resources/image/ReiFax_Help_logo-72.png"   gap:platform="ios"        width="72" height="72" />
  <icon src="resources/image/ReiFax_Help_logo-76.png"   gap:platform="ios"        width="76" height="76" />
  <icon src="resources/image/ReiFax_Help_logo-80.png"   gap:platform="ios"        width="80" height="80" />
  <icon src="resources/image/ReiFax_Help_logo-100.png"  gap:platform="ios"        width="100" height="100" />
  <icon src="resources/image/ReiFax_Help_logo-114.png"  gap:platform="ios"        width="114" height="114" />
  <icon src="resources/image/ReiFax_Help_logo-120.png"  gap:platform="ios"        width="120" height="120" />
  <icon src="resources/image/ReiFax_Help_logo-144.png"  gap:platform="ios"        width="144" height="144" />
  <icon src="resources/image/ReiFax_Help_logo-152.png"  gap:platform="ios"        width="152" height="152" />
  

  <gap:splash src="resources/image/logoV_320.png"  gap:platform="android" gap:qualifier="port-ldpi" />
  <gap:splash src="resources/image/logoV_320.png"  gap:platform="android" gap:qualifier="port-mdpi" />
  <gap:splash src="resources/image/logoV_480.png"  gap:platform="android" gap:qualifier="port-hdpi" />
  <gap:splash src="resources/image/logoV_720.png"  gap:platform="android" gap:qualifier="port-xhdpi" />
  
  <gap:splash src="resources/image/logoH_320.png"  gap:platform="android" gap:qualifier="land-ldpi" />
  <gap:splash src="resources/image/logoH_320.png"  gap:platform="android" gap:qualifier="land-mdpi" />
  <gap:splash src="resources/image/logoH_480.png"  gap:platform="android" gap:qualifier="land-hdpi" />
  <gap:splash src="resources/image/logoH_1280.png" gap:platform="android" gap:qualifier="land-xhdpi" />
    
  <gap:splash src="resources/image/logoV_480.png"       gap:platform="ios"     width="320"  height="480" />
